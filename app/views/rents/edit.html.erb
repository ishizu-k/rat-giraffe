<h1>物件編集</h1>

<%= form_for(@rent) do |form| %>
  <div class="field">
    <%= form.label :物件名 %><br>
    <%= form.text_field :property_name %>
  </div>
  <div class="field">
    <%= form.label :賃料 %><br>
    <%= form.text_field :fee %>円
  </div>
  <div class="field">
    <%= form.label :住所 %><br>
    <%= form.text_field :address %>
  </div>
  <div class="field">
    <%= form.label :築年数 %><br>
    <%= form.text_field :age %>年
  </div>
  <div class="field">
    <%= form.label :備考 %><br>
    <%= form.text_area :note %>
  </div>
  <hr>

  <h3>最寄り駅1</h3>
    <%= form.fields_for :stations do |s_form| %>
      <div class="field">
        <%= s_form.label :路線名 %><br>
        <%= s_form.text_field :line_name %>
      </div>
      <div class="field">
        <%= s_form.label :駅名 %><br>
        <%= s_form.text_field :station_name %>
      </div>
      <div class="field">
        <%= s_form.label :徒歩分数 %><br>
        <%= s_form.text_field :walk %>
      </div>
      <% end %>

  <h3>最寄り駅2</h3>

  <div class="field">
  <%= form.submit "更新する" %>
  </div>
<% end %>

<br>
<%= link_to '詳細', rent_path %> | <%= link_to '戻る', rents_path %>
